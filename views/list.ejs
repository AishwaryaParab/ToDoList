<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>To Do List</title>
    <link rel="stylesheet" href="CSS/styles.css" />
  </head>
  <body>
    <!-- running code inside the ejs template
  <%  if(kindOfDay == "Saturday" || kindOfDay == "Sunday"){ %>
      <h1 style = "color: purple;"><%=kindOfDay%> ToDoList</h1>
  <%  } else{ %>
      <h1 style = "color: blue;"><%= kindOfDay%> ToDoList</h1>
  <%  } %>
  -->
    <div class="box" id="heading">
      <h1><%= kindOfDay  %></h1>
    </div>

    <!-- <li><%= listItem %></li>       previously-->
    <div class="box">
      <% listItem.forEach((item) => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()" />
          <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= kindOfDay %>" />
      </form>
      <% }) %>

      <!-- <% for(var i=0; i<listItem.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p> <%=  listItem[i].name  %> </p>
    </div>
    <% } %> -->

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" name="button" value="<%= kindOfDay %>">+</button>
      </form>
    </div>
  </body>
</html>
